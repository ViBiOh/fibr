{{- define "share-form" -}}
  <form class="modal-content" method="POST">
    <h2 class="header">Share folder access</h2>
    <p class="fields">
      <label for="edit" class="half">Edit</label>
      <input id="edit" type="checkbox" name="edit" class="half" value="true" />
    </p>
    <p class="center">
      <button type="submit" class="button bg-important">
        Share
      </button>
    </p>
  </form>
{{- end -}}
