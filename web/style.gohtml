{{- define "style" -}}
  <style type="text/css">
    * {
      box-sizing: border-box;
    }

    html {
      font-size: 62.5%;
    }

    body {
      -webkit-overflow-scrolling: touch;
      margin: 0;
    }

    body,
    button,
    input {
      font-family:
        -apple-system,
        'Segoe UI',
        'Roboto',
        'Oxygen-Sans',
        'Ubuntu',
        'Cantarell',
        'Helvetica Nue',
        sans-serif;
      font-size: 1.6rem;
      font-style: normal;
      font-weight: 400;
    }

    p {
      margin: 1rem;
    }

    figure {
      margin: 0;
    }

    .center {
      text-align: center;
    }

    .full {
      width: 100%;
    }

    .flex {
      display: flex;
    }

    .flex-center {
      align-items: center;
      justify-content: center;
    }

    .header {
      background-color: whitesmoke;
      color: dimgray;
      padding: 0.5rem 1rem;
    }

    .title {
      margin: 0;
      padding: 0;
    }

    .icon {
      height: 2rem;
      text-decoration: none;
      vertical-align: middle;
      width: 2rem;
    }

    .icon-large {
      height: 4rem;
      width: 4rem;
    }

    .thumbnail {
      width: 100%;
      max-height: 100%;
    }

    .button {
      border-radius: 4px;
      border: 0;
      padding: 1rem;
      text-decoration: none;
    }

    .button-icon {
      background-color: transparent;
      border: 0;
      margin: 0;
      padding: 0;
    }

    .bg-important {
      background-color: royalblue;
      color: ghostwhite;
    }

    .bg-success {
      background-color: yellowgreen;
      color: ghostwhite;
    }

    .bg-danger {
      background-color: tomato;
      color: ghostwhite;
    }

    .modifier {
      display: inline-block;
      padding: 1rem;
    }

    .modal {
      background-color: rgba(105, 105, 105, 0.75);
      height: 100%;
      left: 0;
      pointer-events: none;
      position: fixed;
      top: 0;
    }

    .modal-content {
      background-color: whitesmoke;
      pointer-events: auto;
    }

    @media screen and (max-width: 640px) {
      .modal-content {
        width: 100%;
      }
    }

    .message {
      margin: 0;
      padding: 1rem 2rem;
      text-align: center;
    }

    #tools {
      background-color: whitesmoke;
      bottom: 0;
      padding: 1rem;
      position: fixed;
      right: 0;
    }

    #files {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    #shares {
      padding: 1rem;
      width: 100%;
    }

    .share-content td {
      border-bottom: 1px solid dimgray;
    }

    .share-content:hover {
      background-color: aliceblue;
    }

    {{- if and (eq .Display "list") .CanEdit -}}
      {{- range .Files -}}
        #confirm-modal-{{ filename_fingerprint . }},
      {{- end -}}
    {{- end -}}
    #upload-modal,
    #folder-modal,
    #share-modal {
      display: none;
    }

    {{- if and (eq .Display "list") .CanEdit -}}
      {{- range .Files -}}
        #confirm-modal-{{ filename_fingerprint . }}:target,
      {{- end -}}
    {{- end -}}
    #upload-modal:target,
    #folder-modal:target,
    #share-modal:target {
      display: flex;
    }

    {{- if and (eq .Display "list") .CanEdit -}}
      {{- range .Files -}}
        #confirm-modal-{{ filename_fingerprint . }}:target ~ .content,
      {{- end -}}
    {{- end -}}
    #upload-modal:target ~ .content,
    #folder-modal:target ~ .content,
    #share-modal:target ~ .content {
      pointer-events: none;
    }

    .throbber {
      margin: auto;
      display: none;
      text-align: center;
    }

    .throbber > div {
      width: 1rem;
      height: 1rem;
      background-color: dimgrey;
      border-radius: 100%;
      display: inline-block;
      animation: sk-bouncedelay 1.4s infinite ease-in-out both;
    }

    .throbber .bounce1 {
      animation-delay: -0.32s;
    }

    .throbber .bounce2 {
      animation-delay: -0.16s;
    }

    @keyframes sk-bouncedelay {
      0%,
      80%,
      100% {
        transform: scale(0);
      }

      40% {
        transform: scale(1);
      }
    }

    {{- if eq .Display "list" -}}
      #list-display {
        background-color: aliceblue;
      }

      .file {
        align-items: center;
        display: flex;
        flex-wrap: wrap;
        margin: 0.5rem 1rem 0;
      }

      .filelink {
        align-items: center;
        display: inline-flex;
        height: 2.5rem;
        width: 35rem;
      }

      .filename {
        display: inline-block;
        flex: 1 1 auto;
        overflow: hidden;
        text-align: left;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .filelink .icon {
        margin-right: 1rem;
      }

      .file-delete {
        display: none;
      }

      .file:hover .file-delete {
        display: inline-block;
      }

      .file-delete .icon {
        margin: 0;
      }

      @media screen and (max-width: 640px) {
        .filelink {
          width: calc(100% - 2rem);
        }

        .file-delete {
          display: inline-block;
        }
      }
    {{- end -}}

    {{- if eq .Display "grid" -}}
      #grid-display {
        background-color: aliceblue;
      }

      #files {
        display: grid;
        grid-gap: .5rem;
        grid-template-columns: repeat(auto-fill, minmax(15rem, 1fr));
        margin: .5rem;
      }

      #files > * {
        align-items: center;
        border: 1px solid whitesmoke;
        display: flex;
        min-height: 12rem;
        width: 100%;
      }

      .file {
        padding: 0.5rem;
      }

      .filelink {
        text-align: center;
        width: 100%;
      }

      .filelink .icon {
        height: 6rem;
        width: auto;
      }

      .filelink figure img {
        vertical-align: middle;
        width: 100%;
      }

      .filename {
        display: block;
        margin-top: 1rem;
        overflow: hidden;
        text-align: center;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .file-delete {
        display: none;
      }
    {{- end -}}

    @media print {
      body::after {
        content: 'Save ink, share link.';
      }

      body > * {
        display: none;
      }
    }
  </style>
{{- end -}}
