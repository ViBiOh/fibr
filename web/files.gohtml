{{- define "files" -}}
  {{- template "header" . -}}
  {{- template "menu" . -}}

  {{- $root := . -}}

  <header class="header">
    <h1 class="title" itemscope itemtype="http://schema.org/BreadcrumbList">
      <span itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
        <a href="/{{- .Prefix -}}" itemprop="item">
          <span itemprop="name">{{- .RootName -}}</span>
        </a>
      </span>
      {{- range $index, $path := .Paths -}}
        <span itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem">
           / 
          <a href="/{{- $root.Prefix -}}{{- rebuildPaths $root.Paths $index -}}/" itemprop="item">
            <span itemprop="name">{{- $path -}}</span>
          </a>
        </span>
      {{- end -}}
    </h1>
  </header>

  {{- template "message" .Message -}}

  {{- if .CanEdit -}}
    {{- template "upload-form" . -}}
    {{- template "folder-form" . -}}

    {{- if eq .Display "list" -}}
      {{- range .Files -}}
        {{- template "confirm-modal" . }}
      {{- end -}}
    {{- end -}}
  {{- end -}}

  {{- if .CanShare -}}
    {{- template "share-form" . -}}
  {{- end -}}

  <div class="content">
    {{- template "modifiers" . -}}

    <ul id="files">
      {{- range .Files -}}
        {{- if and (isImage .) (eq $root.Display "grid") -}}
          <li class="image">
        {{- else -}}
          <li class="file">
        {{- end -}}
          <a class="filelink" href="{{- filename . -}}" title="{{- filename . -}}">
            {{- if and (isImage .) (eq $root.Display "grid") (hasThumbnail $root.Root $root.Path .) -}}
              {{- template "async-image" asyncImage . $root.Config.Version -}}
            {{- else -}}
              {{- if .IsDir -}}
                <img class="icon" src="{{- $root.Config.StaticURL -}}/svg/folder.svg?v={{- $root.Config.Version -}}" alt="folder" />
              {{- else -}}
                <img class="icon" src="{{- $root.Config.StaticURL -}}/svg/file{{- typeFromExtension . -}}.svg?v={{- $root.Config.Version -}}" alt="file" />
              {{- end -}}
              <span class="filename">{{- filename . -}}</span>
            {{- end -}}

            {{- if and (eq $root.Display "list") $root.CanEdit -}}
              <a class="button button-icon file-delete" href="#confirm-modal-{{ filename_fingerprint . }}">
                <img class="icon" src="{{- $root.Config.StaticURL -}}/svg/times.svg?v={{- $root.Config.Version -}}" alt="delete" />
              </a>
            {{- end -}}
          </a>
        </li>
      {{- end -}}
    </ul>
  </div>

  {{- template "footer" . -}}
{{- end -}}
