{{- define "upload-form" -}}
  <form class="modal-content" method="POST" enctype="multipart/form-data">
    <h2 class="header">Upload a file</h2>
    <p class="fields">
      <input type="file" name="file" class="full" />
    </p>
    <p class="center">
      <button type="submit" class="button bg-important">
        Upload
      </button>
    </p>
  </form>
{{- end -}}
